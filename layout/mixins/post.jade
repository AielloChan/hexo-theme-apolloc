mixin postInfo(item)
    .post-info
        != full_date(item.date, 'll')
        if item.from && (is_home() || is_post())
            a.post-from(href=item.from target="_blank" title=item.from)!= __('translated')

mixin postInfoFull(item)
    .post-info
        != full_date(item.date, 'lll')
        - if (item.updated.isAfter('8999-12-31 23:59:59')) {
        -    item.top = true
        -    item.updated = item.updated.subtract(7000, 'y')
        - }
        if !item.hideUpdated && item.updated > item.date
            != ' Â· ' + __('updated') + ' ' + full_date(item.updated, 'lll')
        if item.top
            a.stick-top!= __('top')
        if item.from && (is_home() || is_post())
            a.post-from(href=item.from target="_blank" title=item.from)!= __('translated')

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo(item)
                    .post-content
                        != item.excerpt
                    a.read-more(href= url_for(item.path))!= __('more')
        - })

//- Archive Page
mixin postList()
    .archive
        - var year = 0;
        - var change = false;
        - page.posts.each(function (item) {
            - var itemYear = date(item.date, 'YYYY') - 0;
            - change = year !== itemYear;
            - year = change ? itemYear : year;
            if change 
                h2.archive-year!= year
            .post-item
                +postInfo(item)
                a.post-title-link(href= url_for(item.path))
                    != item.title
        - })

//- Categories Page
mixin categorieList()
    .archive
        h2.archive-year!= __('categories')
        - site.categories.each(function (item) {
            a.category-title-link(href= url_for(item.path))
                != item.name + ' (' + item.length + ') '
        - })

//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                != item.title
            +postInfoFull(item)
            .post-content
                != item.content